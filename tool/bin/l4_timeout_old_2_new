#!/usr/bin/env perl

my $time;

if ($#ARGV == 0)
{
  $time = $ARGV[0];
} elsif ($#ARGV == 1)
{
  $time = $ARGV[0] * (4 ** (15-$ARGV[1]));
} else
{
  print "Usage: l4_timeout_old_2_new <time in us> | <man> <exp>\n";
}

my $e = 0;
my $m = $time;

while ($m > ((1<<10) - 1))
{
  $m >>= 1;
  $e++;
}

my $to = $m * (1<<$e);

print "timeout=${time}us man=$m exp=$e (to=${to}us)\n";



